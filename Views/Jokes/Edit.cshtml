@model GroanZone.ViewModels.JokeFormVM
<h2>Edit Joke</h2>
<form asp-action="Edit" asp-route-id="@Model.JokeId" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="JokeId" />
    <partial name="_JokeForm" />
    <button class="btn btn-primary" type="submit">Save</button>
    <a class="btn btn-secondary" asp-action="Details" asp-route-id="@Model.JokeId">Cancel</a>
</form>